<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.binvshe.binvshe.binvsheui.home.LinearListFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_fr_linear_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.srr.dev.view.xrecyclerview.XRecyclerView
            android:id="@+id/rv_fr_linear_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_bg_color"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    <ViewStub
        android:id="@+id/vs_base_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</FrameLayout>