<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/item_album_liner"
        android:layout_width="match_parent"
        android:layout_height="49.5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_album_text"
            style="@style/item_album_text"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/item_album_text"/>
        <TextView
            android:id="@+id/item_album_num"
            style="@style/item_album_num"
            android:layout_marginRight="15dp"
            android:layout_weight="2.5"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_album_num" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/item_album_liner"
        android:background="@color/line_recyclerview_1px" />
</RelativeLayout>
